<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Eventbrite</h1>
  <p class="lead">All the events in Eventbrite. Stay tuned!</p>
</div>

<div class="row justify-content-center">
  <a class="btn btn-success btn-lg" <%= link_to "Create New Event", new_event_path %></a>
</div> <br><br>

<div class="container">
  <div class="row">
    <% @events.each do |n| %>
      <div class="col-6">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <h5 class="mb-1"><%= n.title %></h5>
                <p class="card-text"><%= n.description %></p>
              <div class="d-flex w-100 justify-content-between">
                <a <%= link_to "View", event_path(n.id)%> </a>
                <div>
                </div>
              </div>
              </div>
            </div>
          </div>
        </div><br>
      </div>
    <% end %>
  </div>
</div>
