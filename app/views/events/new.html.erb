<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">New Event</h1>
  <p class="lead">Create your own events.</p>
</div>

<br>

<div class="container">
  <%= form_tag events_path do %>
  <div class="form-group">
    <%= text_field_tag('title', '', class:'form-control', required:'true', placeholder:"Title", required:'true', autofocus: 'true')%>
  </div>
  <div class="form-group">
    <%= text_area_tag('content', '', class:'form-control', required:'true', placeholder:"Content", required:'true')%>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-default btn btn-success' %>
</div>
<% end %>


